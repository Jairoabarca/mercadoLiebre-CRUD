<div class="col-12 col-sm-6 col-lg-3">
    <section class="product-box">
        <a href="/products/detail/<%= p.id %>">
            <figure class="product-box_image">
                <img src="/images/products/<%= p.image %>" alt="imagen de producto">
            </figure>
            <article class="product-box_data">
                <h2>$ <%= toThousand((p.price - (p.price * p.discount)/100).toFixed(0))%></h2>
                <% if (p.discount) { %>
                    <span><%= p.discount %> OFF</span>
                <% } %>
                <p><%= p.name %></p>
                <i class="fas fa-truck"></i>
            </article>
        </a>
    </section>
</div>